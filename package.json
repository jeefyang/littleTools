{
    "name": "littletools",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite --config ./vite.config.server.ts",
        "build:vue": "vite build -c vite.config.ts --outDir build_vue",
        "build:server": "vite build -c vite.config.server.ts --outDir build_server",
        "build:all": "run-p build:vue build:server",
        "start:server": "nodemon build_server/main.cjs",
        "preview": "vite preview",
        "type-check": "vue-tsc --build",
        "format": "prettier --write src/"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "pinia": "^3.0.3",
        "vue": "^3.5.17",
        "vue-router": "^4.5.1"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.2",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^22.16.0",
        "@vitejs/plugin-vue": "^6.0.0",
        "@vitejs/plugin-vue-jsx": "^5.0.0",
        "@vue/tsconfig": "^0.7.0",
        "naive-ui": "^2.42.0",
        "nodemon": "^3.1.10",
        "npm-run-all2": "^8.0.4",
        "prettier": "3.5.3",
        "sass-embedded": "^1.89.2",
        "ts-node": "^10.9.2",
        "typescript": "~5.8.3",
        "unplugin-auto-import": "^19.3.0",
        "unplugin-vue-components": "^28.8.0",
        "vfonts": "^0.0.3",
        "vite": "^7.0.0",
        "vite-plugin-node": "^7.0.0",
        "vite-plugin-vue-devtools": "^7.7.7",
        "vue-tsc": "^2.2.10"
    }
}