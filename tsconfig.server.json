{
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom"
        ],
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "noEmit": true,
        "baseUrl": "./",
        "paths": {
            "@apis/*": [
                "src/apis/*"
            ],
            "@server/*": [
                "server/*"
            ]
        }
    },
    "include": [
        "env.d.ts",
        "server/**/*.ts",
        "src/apis/**/*.ts",
        "./types/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}