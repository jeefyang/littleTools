{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "types": [
            "naive-ui/volar"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}