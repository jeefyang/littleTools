{
    "compilerOptions": {
        "lib": [
            "esnext",
        ],
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "strict": true, // 开启所有严格检查
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": true, // 禁止隐式any类型,
        "checkJs": true
    },
    "include": [
        "env.d.ts",
        "db/**/*.mjs",
        "knexfile.mjs"
    ],
    "exclude": [
        "node_modules"
    ]
}